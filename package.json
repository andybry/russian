{
  "name": "russian",
  "version": "0.0.0",
  "scripts": {
    "lint": "eslint src config webpack.config.js test",
    "clean": "rimraf public",
    "compile": "NODE_ENV=production webpack",
    "prepublish": "npm run clean && npm run compile",
    "test": "mocha --compilers js:babel-register --recursive --require ./test/setup.js",
    "test:watch": "npm test -- --watch --reporter min",
    "start:dev": "webpack-dev-server --hot --inline --host '0.0.0.0' --port $PORT",
    "start:prod": "http-server --port $PORT public",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "heroku:deploy": "heroku builds:create -a russian-words",
    "deploy": "npm install && npm prune --production && npm run heroku:deploy"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "deep-freeze": "0.0.1",
    "dsv-loader": "andybry/dsv-loader#5c85801",
    "enzyme": "^2.2.0",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "expect": "^1.16.0",
    "html-webpack-plugin": "^2.15.0",
    "jsdom": "^8.2.0",
    "mocha": "^2.4.5",
    "pre-push": "^0.1.1",
    "react": "^0.14.8",
    "react-addons-test-utils": "^0.14.8",
    "react-dom": "^0.14.8",
    "react-redux": "^4.4.1",
    "redux": "^3.3.1",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.8.4"
  },
  "dependencies": {
    "http-server": "^0.9.0",
    "if-env": "^1.0.0"
  }
}
